{
  "name": "business-solution",
  "version": "1.0.0",
  "description": "Business solution Front Desktop App",
  "type": "module",
  "keywords": [],
  "author": "Camilo Isaza",
  "license": "ISC",
  "prettier": {
    "singleQuote": true
  },
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron-prod": "npm run build && electron .",
    "preview": "vite preview",
    "build:ts": "tsc -w",
    "test": "jest --watchAll --coverage",
    "test:prod": "jest --watchAll --watchAll=false --coverage --passWithNoTests",
    "prepare": "husky install",
    "sass": "sass sass:css -w",
    "api": "json-server --watch ./api/db.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "electron-dev": "concurrently \"cross-env BROWSER=none yarn dev\" \"wait-on http://localhost:3000 && electron .\""
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/bootstrap": "^5.2.10",
    "@types/jest": "^29.5.6",
    "@types/jquery": "^3.5.29",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.36",
    "@types/react-dom": "^18.2.7",
    "@types/redux-mock-store": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^32.1.2",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.1",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "sass": "^1.69.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-brands-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.2",
