    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.18.0",
    "react-transition-group": "^4.4.5",
    "redux-mock-store": "^1.5.4",
    "sweetalert2": "^11.6.13",
    "wait-on": "^8.0.1"
  }
